<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report id="attendance_report_model"
        model="animal.attendance"
        string="Attendance Report"
        report_type="qweb-pdf"
        name="med_vet_manager.attendance_report"
        file="med_vet_manager.attendance_report"
        print_report_name="'Attendance Report - %s' % (object.name)" />

    <template id="attendance_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2>Attendance Report</h2>
                        <div class="row">
                            <div class="col-md">
                                INFORMAÇÕES PARCEIRO
                            </div>
                            <div class="col-md">
                                INFORMAÇÕES ANIMAL
                            </div>
                        </div>
                        <div id="informations" class="row">
                            <div class="col-md" t-if="o.name" name="name">
                                <strong>Code:</strong>
                                <p class="m-0" t-field="o.name"/>
                            </div>
                            <div class="col-md" t-if="o.date">
                                <strong>Date:</strong>
                                <p class="m-0" t-field="o.date"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
