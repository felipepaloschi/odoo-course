<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_attendance_invoicing_wizard_form" model="ir.ui.view">
        <field name="name">View Attendance Invoicing Wizard</field>
        <field name="model">attendance.invoicing</field>
        <field name="arch" type="xml">
            <form string="Attendance Invoicing">
                <field name="attendance_id" invisible="1" />
                <field name="attendance_line_ids" nolabel="1">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="attendance_invoicing_id" invisible="1"/>
                        <field name="attendance_product_id" invisible="1"/>
                        <field name="product_id" />
                        <field name="quantity" />
                        <field name="price_unit" />
                        <field name="subtotal" />
                        <field name="invoice" />
                    </tree>
                </field>
                <!-- <group class="oe_subtotal_footer oe_right" colspan="2">
                    <div class="oe_inline o_td_label">
                        <label for="total_to_invoice"/>
                    </div>
                    <field name="total_to_invoice" nolabel="1" class="oe_subtotal_footer_separator" style="border-top: None" widget="monetary"/>
                </group> -->
                <footer>
                    <button name="button_generate_invoice"  string="Create Invoice" type="object"
                        class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_attendance_invoicing_wizard_form" model="ir.actions.act_window">
        <field name="name">Attendance Invoicing</field>
        <field name="res_model">attendance.invoicing</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
