<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ATTEDANCE SEQUENCE -->

    <record id="attendance_name_sequence" model="ir.sequence">
        <field name="name">Attendance Name</field>
        <field name="code">attendance.name.sequence</field>
        <field name="prefix">AT</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False" />
    </record>

    <!-- STAGES -->

    <record id="attendance_waiting_attendance" model="animal.stage">
        <field name="name">Waiting for Service</field>
        <field name="sequence">1</field>
    </record>

    <record id="attendance_diagnosis" model="animal.stage">
        <field name="name">Diagnosis</field>
        <field name="sequence">2</field>
    </record>

    <record id="attendance_treatment" model="animal.stage">
        <field name="name">Treatment</field>
        <field name="sequence">3</field>
    </record>

    <record id="attendance_waiting_return" model="animal.stage">
        <field name="name">Waiting Return</field>
        <field name="sequence">4</field>
    </record>

    <record id="attendance_return" model="animal.stage">
        <field name="name">Return</field>
        <field name="sequence">5</field>
    </record>

    <record id="attendance_done" model="animal.stage">
        <field name="name">Done</field>
        <field name="sequence">6</field>
        <field name="folded">1</field>
    </record>
</odoo>
